{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2016",
    "lib": ["esnext", "dom"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "./app",
    "moduleResolution": "node",
    "allowJs": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": false,
  },
  "exclude": ["node_modules", "dist", "coverage", "database"],
  "include": ["app"]
}
