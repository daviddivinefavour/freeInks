{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2016",
    "lib": ["esnext", "dom"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "./app",
    "moduleResolution": "node",
    "baseUrl": "./",
    "allowJs": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": false,
       "paths": {
      "*": ["node_modules/*"],
      "@app": ["app/*"],
    }
  },
  "exclude": ["node_modules", "dist", "coverage","database"],
  "include": ["app"]
}
