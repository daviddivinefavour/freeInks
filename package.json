{
  "name": "freeinks-api",
  "version": "1.0.0",
  "description": "The backend service for freeInks",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon",
    "prod": "node -r ts-node/register/transpile-only -r tsconfig-paths/register ./dist/app/server.js",
    "build": "tsc -p tsconfig.prod.json",
    "staging": "node -r ts-node/register/transpile-only -r tsconfig-paths/register ./dist/app/server.js",
    "db:drop": "NODE_ENV=${npm_config_env}  && npx sequelize db:drop --env=${npm_config_env}",
    "db:create": "NODE_ENV=${npm_config_env}  && npx sequelize db:create --env=${npm_config_env}",
    "db:migrate": "NODE_ENV=${npm_config_env}  && npx sequelize db:migrate --env=${npm_config_env}",
    "db:migrate:undo": "NODE_ENV=${npm_config_env}  && npx sequelize db:migrate:undo --env=${npm_config_env}",
    "db:seed": "NODE_ENV=${npm_config_env}  && npx sequelize db:seed:all --env=${npm_config_env}",
    "db:seed:undo": "NODE_ENV=${npm_config_env}  && npx sequelize db:seed:undo --env=${npm_config_env}",
    "test": "NODE_ENV=test mocha --check-leaks"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/daviddivinefavour/freeInks.git"
  },
  "author": "Divinefavour David",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/daviddivinefavour/freeInks/issues"
  },
  "homepage": "https://github.com/daviddivinefavour/freeInks#readme",
  "devDependencies": {
    "@types/chai": "^4.3.10",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/mocha": "^10.0.4",
    "@types/node": "^20.9.2",
    "@types/sinon": "^17.0.1",
    "@types/sinon-chai": "^3.2.12",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "chai": "^4.3.10",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^8.9.0",
    "eslint-config-standard-with-typescript": "^37.0.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-n": "^16.0.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.0",
    "sequelize-cli": "^6.6.1",
    "sequelize-test-helpers": "^1.4.3",
    "sinon": "^17.0.1",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@types/bcrypt": "^5.0.0",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.1",
    "moment": "^2.29.4",
    "nodemailer": "^6.9.4",
    "pg": "^8.11.3",
    "sequelize": "^6.32.1",
    "sequelize-typescript": "^2.1.5",
    "sinon-chai": "^3.7.0",
    "uuid": "^9.0.0",
    "winston": "^3.10.0",
    "yup": "^1.2.0"
  }
}
